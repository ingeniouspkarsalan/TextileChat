<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/splash"
    tools:context=".activities.Sign_up">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blur">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textAllCaps="true"
            android:textSize="50dp"
            android:fontFamily="sans-serif-thin"
            android:layout_margin="5dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/white" />

    <EditText
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/txt_style"
        android:layout_marginStart="10dp"
        android:inputType="text"
        android:layout_marginEnd="10dp"
        android:paddingStart="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:hint="Name"/>

    <EditText
        android:id="@+id/tv_contact"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/txt_style"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        android:inputType="phone"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:layout_marginEnd="10dp"
        android:paddingStart="10dp"
        android:hint="Contact"/>

    <EditText
        android:id="@+id/tv_email"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:background="@drawable/txt_style"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:paddingStart="10dp" />

    <EditText
        android:id="@+id/tv_password"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:background="@drawable/txt_style"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingStart="10dp" />

    <EditText
        android:id="@+id/tv_city"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/txt_style"
        android:layout_marginTop="15dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:layout_marginStart="10dp"
        android:inputType="text"
        android:layout_marginEnd="10dp"
        android:paddingStart="10dp"
        android:hint="City"/>
    <EditText
        android:id="@+id/tv_company"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:background="@drawable/txt_style"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        android:inputType="text"
        android:layout_marginEnd="10dp"
        android:paddingStart="10dp"
        android:hint="Company"/>

    <EditText
        android:id="@+id/tv_c_nature"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/txt_style"
        android:layout_marginTop="15dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:layout_marginStart="10dp"
        android:inputType="text"
        android:layout_marginEnd="10dp"
        android:paddingStart="10dp"
        android:hint="Company Nature"/>

    <EditText
        android:id="@+id/tv_c_address"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:textColor="@color/white"
        android:background="@drawable/txt_style"
        android:textColorHint="@color/white"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        android:inputType="text"
        android:layout_marginEnd="10dp"
        android:paddingStart="10dp"
        android:hint="Company Address"/>

        <Button
            android:id="@+id/tv_submit"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:background="@drawable/btn_style_sing_up"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:inputType="text"
            android:layout_marginEnd="10dp"
            android:paddingStart="40dp"
            android:paddingEnd="40dp"
            android:padding="10dp"
            android:textAllCaps="true"
            android:textSize="18dp"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:text="SIGN UP"/>
    </LinearLayout>
</ScrollView>
</LinearLayout>