<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content" android:orientation="vertical">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="10dp"
    android:id="@+id/usr_card"
    android:orientation="horizontal">

    <com.github.florent37.shapeofview.shapes.CircleView
        android:id="@+id/shap_of_circle_other"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:elevation="4dp"
        android:background="@color/white"
        app:shape_circle_borderColor="@color/colorPrimaryDark"
        app:shape_circle_borderWidth="1dp">

        <!-- YOUR CONTENT -->

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/user_image"
            android:scaleType="fitXY"
            android:src="@drawable/ic_for_chat_card"/>

    </com.github.florent37.shapeofview.shapes.CircleView>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical">
    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Name"
        android:padding="5dp"
        android:textSize="20dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="5dp"
        android:id="@+id/dates"
        android:textColor="@color/hint"
        android:singleLine="true"
        android:text="hi hello hru hi hello hru hi hello hru"/>
</LinearLayout>

    <com.github.florent37.shapeofview.shapes.CircleView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:elevation="4dp"
        android:id="@+id/mark_show"
        android:layout_weight="1"
        android:visibility="gone"
        android:layout_gravity="right|center_vertical"
        android:background="@color/searchcolor"
        app:shape_circle_borderColor="@color/colorAccent"
        app:shape_circle_borderWidth="2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="3"
            android:id="@+id/markers_count"
            android:padding="5dp"
            android:layout_gravity="center|center_vertical"
            android:textColor="@color/white"/>
    </com.github.florent37.shapeofview.shapes.CircleView>
</LinearLayout>

</LinearLayout>